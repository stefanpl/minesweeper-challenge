{
  "name": "typescript-node-project",
  "version": "0.0.1",
  "description": "A boilerplate to start a typescript node project",
  "main": "index.js",
  "scripts": {
    "dev": "npm run development",
    "prod": "npm run production",
    "development": "NODE_ENV=development npx webpack --mode=development",
    "watch": "NODE_ENV=development npx webpack --mode=development --watch",
    "production": "NODE_ENV=production npx webpack --mode=production",
    "lint": "npx eslint \"src/**/*[jt]s\"",
    "lint-fix": "npx eslint --fix \"src/**/*[jt]s\"",
    "test": "NODE_ENV=testing npx mocha dist/tests.compiled.js",
    "quick-test": "RUN_QUICK_TEST=yeas NODE_ENV=testing npx mocha dist/tests.compiled.js"
  },
  "author": "spl",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "chai": "^4.2.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "mocha": "^5.2.0",
    "prettier": "1.18.2",
    "ts-loader": "^9.4.2",
    "typescript": "^3.2.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-typescript": "^4.0.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.18.2"
  }
}
